{
  "name": "group8-project",
  "private": true,
  "version": "1.0.0",
  "description": "Group 8 Project with code quality checks",
  "scripts": {
    "prepare": "husky",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:fix:frontend",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "format": "npm run format:frontend",
    "format:frontend": "cd frontend && npm run format",
    "check": "npm run lint && npm run format:check",
    "format:check": "npm run format:check:frontend",
    "format:check:frontend": "cd frontend && npm run format:check",
    "build": "cd backend/functions && npm install && cd ../../frontend && npm install && npm run build",
    "clean_build": "rm -rf frontend/dist && rm -rf frontend/node_modules && rm -rf frontend/package-lock.json && rm -rf backend/functions/node_modules && rm -rf backend/functions/package-lock.json",
    "init:data": "npm run init:templates",
    "init:templates": "node scripts/initTemplates.js",
    "backend:serve": "firebase emulators:start",
    "deploy": "npm run clean_build && firebase deploy"
  },
  "devDependencies": {
    "firebase-admin": "^13.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx}": [
      "cd frontend && eslint --fix",
      "cd frontend && prettier --write"
    ],
    "frontend/**/*.{less,css,json,md}": [
      "cd frontend && prettier --write"
    ]
  }
}

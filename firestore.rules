rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 用户数据
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 表单数据
    match /forms/{formId} {
      allow read, write: if request.auth != null;
    }
    
    // 系统配置（只读）
    match /config/{document} {
      allow read: if true;
    }
  }
}
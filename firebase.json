{
    "functions": {
      "source": "backend/functions",
      "runtime": "nodejs22"
    },
    "hosting": {
      "public": "frontend/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        { "source": "/api/**", "function": { "functionId": "api", "region": "us-central1" } }
      ],
      "headers": [
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            }
          ]
        }
      ]
    },
    "storage": {
      "rules": "storage.rules"
    },
    "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    },
    "emulators": {
      "auth": { "port": 9099, "host": "0.0.0.0" },
      "firestore": { "port": 8081, "host": "0.0.0.0" },
      "functions": { "port": 5001, "host": "0.0.0.0" },
      "storage": { "port": 9199, "host": "0.0.0.0" },
      "ui": { "enabled": true, "port": 4000, "host": "0.0.0.0" }
    }
  }